<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="loginapp.RegisterController" alignment="CENTER" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="usernameField" visible="false" />


    <Button text="I'm a Student" onAction="#handleStudentRegistration"/>
    <Button text="I'm a Teacher" onAction="#handleTeacherRegistration"/>
</VBox>
